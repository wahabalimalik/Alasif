<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="sale_ext_token_money.payslip_ext">
      <field name="name">sale_ext_token_money payslip_ext</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='struct_id']" position="after">
            <field name="adv"  invisible='1'/>
            <field name="advance" attrs="{'invisible': [('adv', '!=', True)]}"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>